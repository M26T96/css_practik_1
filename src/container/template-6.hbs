<header class="header">
  <div>
    {{> logo}}
  </div>
  <nav class="header_nav  ">
    <div class="header_nav_right">
      {{> nav list=header}}
    </div>
  </nav>
</header>

<main class="main">
  {{#with info}}
  <div class="info">
    <div class="info_title">{{title}}</div>
    <p class="info_description">{{description}}</p>
  </div>
  {{/with}}

  {{#with form}}
  <form class="form">
    <h2 class="form_title">{{title}}</h2>
    <div class="form_input_list">
      {{#each inputs}}
      <input type="{{type}}" placeholder="{{placeholder}}" name="{{name}}" id="form-input-{{id}}" class="form_input">
      {{/each}}
    </div>

    <div class="form_checkbox">
      <input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
      <div></div>
      <label for="{{checkbox.name}}">{{checkbox.label}}</label>
    </div>
    <button type="submit" class="form_button">{{button}}</button>
    <p class="form_info">{{info}}</p>
  </form>
  {{/with}}
</main>

<div class="updates">
  {{#with updates}}
  <h2 class="upd_title">{{title}}</h2>
  {{#each list}}
  <div class="list">
    <img src="https://picsum.photos/32/32" alt="photo" class="list_img">
    <div class="list_info">
      <h4 class="list_nickname">{{nickname}}</h4>
      <p class="list_description">{{description}}</p>
    </div>
  </div>
  {{/each}}
  <a href="{{show_all.url}}" class="shov_link">{{show_all.text}}</a>
  {{/with}}
</div>

<div class="experience">
  {{#with expirience}}
  <div class="badge">
    <div class="expirience_badge">{{badge}}</div>
  </div>
  <div class="experience_title">{{title}}</div>
  <div class="expirience_list">
    {{#each list}}
    <div class="expirience_list_item">
      <h3 class="expirience_list_name">{{name}}</h3>
      <p class="expirience_list_det">{{details}}</p>
    </div>
    {{/each}}
  </div>
  {{/with}}
</div>
<footer class=" footer">
  <div>
    {{> logo}}
    <span class="footer_copyright"> Copyright 2023</span>
  </div>

  {{#each footer}}
  <div>
    <span class='footer_title'>{{title}}</span>
    {{> nav list=links isVertical=true}}
  </div>
  {{/each}}
</footer>