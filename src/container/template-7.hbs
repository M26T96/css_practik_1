<div class="hero">
    {{#with hero}}
    <h1 class="hero_title">{{title}}</h1>
    <p class="hero_description">{{description}}</p>
    <button class="hero_button">
        <a href="{{button.url}}" class="hero_button_items">{{button.text}}</a>
    </button>
    {{/with}}
</div>

<div class="about">
    {{#with about}}
    <h3 class="about_heading">{{heading}}</h3>
    <p class="about_info">{{info}}</p>
    {{/with}}
</div>

<div class="articles_header">
    <h2 class="articles_name">Our Articles</h2>
    <button class="articles_button">View All</button>
</div>
<div class="articles">

    {{#each articles}}
    {{> articleCardDark data=this}}
    {{/each}}

</div>