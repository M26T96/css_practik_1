<header class="header">
  <div>
    {{> logo}}
  </div>
  <nav class="header_nav  ">
    <div class="header_nav_right">
      {{> nav list=header}}
    </div>
  </nav>
</header>

{{#with main}}
<div class="main">
  <img src="{{image}}" alt="Main image" class="main_photo">
  <div class="main_info">
    <h1 class="main_heading">{{heading}}</h1>
    <p class="main_descriotion">{{descriotion}}</p>
    <a href="{{href}}" class="button">{{button}}</a>
  </div>
</div>
{{/with}}


<div class="featured">
  {{#each featured}}
  {{> cardFeatured data=this}}
  {{/each}}
</div>

<div class="actions">
  {{#each actions}}
  <div class="action_content">
    <h1 class="action_heading">{{heading}}</h1>
    <div class="action_button">
      <a href="{{url}}" class="action_text">{{text}}</a>
    </div>
  </div>
  {{/each}}
</div>

<footer class=" footer">
  <div>
    {{> logo}}
    <span class="footer_copyright"> Copyright 2023</span>
  </div>

  {{#each footer}}
  <div>
    <span class='footer_title'>{{title}}</span>
    {{> nav list=links isVertical=true}}
  </div>
  {{/each}}
</footer>